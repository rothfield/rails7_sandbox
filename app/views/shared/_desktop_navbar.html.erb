<div x-doc="desktop_navbar" class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
  <div class="relative flex items-center justify-between h-16">
    <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">

      <%= render partial: "/shared/mobile_menu_button" %>
      <!-- Mobile menu button-->
    </div>
    <%= render partial: "shared/logo" %>

    <div class="hidden sm:block sm:ml-6">
      <div class="flex space-x-4">
        <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->

        <% ary.each do |h| %>
        <a :class="(my_controller == controller) && 'bg-gray-900 text-white'"  x-data="{ my_controller: '<%= h[:controller] %>' }" href="<%= h[:path] %>" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" ><%= h[:text] %></a>
        <% end %>
      </div>
    </div>

    <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
      <%= render partial: "shared/view_notifications" if false %>
      <%= render partial: "shared/profile_dropdown" if false %>
    </div>
  </div>
</div>
