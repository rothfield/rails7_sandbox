<div id="<%= dom_id checkpoint_category %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= checkpoint_category.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Short name:</strong>
    <%= checkpoint_category.short_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Order:</strong>
    <%= checkpoint_category.order %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this checkpoint category", checkpoint_category, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this checkpoint category', edit_checkpoint_category_path(checkpoint_category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
